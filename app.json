{
  "expo": {
    "name": "QuickShop",
    "slug": "quickshop",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "quickshop",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location for delivery services."
        }
      ],
      "expo-secure-store",
      "expo-web-browser",
      "expo-font"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.theshubham.quickshop",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to find nearby delivery addresses and provide accurate delivery services.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to find nearby delivery addresses and provide accurate delivery services."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.theshubham.quickshop",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "experiments": {
      "typedRoutes": true
    }
  }
}
